<view class="home-container">
  <scroll-view class="todoList" scroll-y="true">
    <view class="item">
      <view class="select {{item.selected && 'active'}}"></view>
      <text>五短的速度快萨迪克萨克的撒的凯撒的空间阿萨德萨撒大大</text>
    </view>
  </scroll-view>
  <t-button text="创建任务" size="mini" type="change"></t-button>
  <view class="tomato-wrapper">
    <view class="tomato">
      <t-clock text="点击开始闹钟"></t-clock>
    </view>
  </view>
  <t-confirm visible="{{visible}}" placeholder="我完成了什么" 
  bindconfirm="confirm" bindcancel="cancel"></t-confirm>
</view>